@page
@model NorthwindWeb.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Company Name</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Suppliers.Count(); i++)
            {
                <tr>
                    <td>@Model.Suppliers[i]</td>
                    <td>@Model.Countries[i]</td>
                    <td>@Model.Phones[i]</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <p>Enter a name for a new supplier:</p>
    <form method="POST">
        <div>
            <input asp-for="Supplier.CompanyName" />
        </div>
        <input type="submit" />
    </form>
</div>